{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": false,
    "moduleDetection": "auto",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Module Resolution */
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "noEmit": true,

    /* Libraries */
    "lib": ["ES2020"],

    /* Types */
    "types": ["node", "@fastify/cookie"],

    /* Build */
    "outDir": "./dist",
    "rootDir": "./src",
    
    /* Miscellaneous */
    "forceConsistentCasingInFileNames": true,
    
    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "#config": ["./config/index.ts"],
      "#config/*": ["./config/*", "./config/*/index.ts"],
      "#data": ["./data/index.ts"],
      "#data/*": ["./data/*", "./data/*/index.ts"],
      "#lib": ["./lib/index.ts"],
      "#lib/*": ["./lib/*", "./lib/*/index.ts"],
      "#models": ["./models/index.ts"],
      "#models/*": ["./models/*", "./models/*/index.ts"],
      "#routes": ["./routes/index.ts"],
      "#routes/*": ["./routes/*", "./routes/*/index.ts"],
      "#utils": ["./utils/index.ts"],
      "#utils/*": ["./utils/*", "./utils/*/index.ts"],
      "#types": ["./types/index.ts"],
      "#types/*": ["./types/*", "./types/*/index.ts"],
      "#middleware": ["./middleware/index.ts"],
      "#middleware/*": ["./middleware/*", "./middleware/*/index.ts"],
      "#schemas": ["./schemas/index.ts"],
      "#schemas/*": ["./schemas/*", "./schemas/*/index.ts"]
    }
  }
}
